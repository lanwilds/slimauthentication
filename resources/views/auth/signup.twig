{% extends 'tamplate/app.twig' %}

{% block content %}
<div class="page-header">
  <h1>RESTful Authentication system<br><small>Developed using RESTful API SlimPHP <br> RESPECT validation, <font style="color:red;">Slim CSRF protecion</font>, Slim Twig views, Eloquent Illuminate Database, JQuery, Bootstrap FrontEnd</small></h1>
  HOME Page
</div>
<div class="row">

	<div class="col-md-6">

		<div class="panel panel-default">

			<div class="panel-heading">Sign Up</div>

				<div class="panel-body">
				
				<form action="{{ path_for('auth.signup') }}" method="post">
					<div class="form-group {{ errors.email ? ' has-error' : '' }}">
						<lable for="email">Email</lable>
						<input type="email" id="email" name="email" placeholder="email@email.com" class="form-control" value="{{ old.email }}">
						{% if errors.email %}
							<span class="help-block">{{ errors.email | first }}</span>
						{% endif %}
					</div>
					<div class="form-group{{ errors.username ? ' has-error' : '' }}">
						<lable for="username">Username</lable>
						<input type="text" id="username" name="username" placeholder="Username here" class="form-control" value="{{ old.username }}">
						{% if errors.username %}
							<span class="help-block">{{ errors.username | first }}</span>
						{% endif %}
					</div>
					<div class="form-group{{ errors.password ? ' has-error' : '' }}">
						<lable for="password">Password</lable>
						<input type="password" id="password" name="password" class="form-control" >
						{% if errors.password %}
							<span class="help-block">{{ errors.password | first }}</span>
						{% endif %}
					</div>
				<button type="submit" class="btn btn-default">Submit</button>

				{{ csrf.field | raw }}
				</form>
				</div>

			</div>

		</div>
	</div>
</div>

{% endblock %}