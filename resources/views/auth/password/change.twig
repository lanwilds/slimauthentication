{% extends 'tamplate/app.twig' %}

{% block content %}
<div class="row">

	<div class="col-md-6 col-md-offset-3">

		<div class="panel panel-default">

			<div class="panel-heading">Change Password</div>

				<div class="panel-body">
				
				<form action="{{ path_for('auth.password.change') }}" method="post"> 
					<div class="form-group{{ errors.password_old ? ' has-error' : '' }}">
						<lable for="password_old">Current Password</lable>
						<input type="password" id="password_old" name="password_old" class="form-control" >
						{% if errors.password_old %}
							<span class="help-block">{{ errors.password_old | first }}</span>
						{% endif %}
					</div>
					<div class="form-group{{ errors.password ? ' has-error' : '' }}">
						<lable for="password">New Password</lable>
						<input type="password" id="password" name="password" class="form-control" >
						{% if errors.password %}
							<span class="help-block">{{ errors.password | first }}</span>
						{% endif %}
					</div>
				<button type="submit" class="btn btn-info">Change Password</button>

				{{ csrf.field | raw }}
				</form>
				</div>

			</div>

		</div>
	</div>
</div>

{% endblock %}