{% extends 'tamplate/login.twig' %}

{% block content %}
<div class="page-header">
  <h1 style="color:#1adda4; font-family:Raleway, sans serif; text-shadow:5px 5px 5px #D9EDF7;">Loyal API Authentication</h1>
  <font style="color:red;">Only For Admins</font>
</div>
<div class="row" >


	<div class="col-md-6 col-lg-6 col-sm-6">

		<div class="panel panel-info" style=" box-shadow: 20px 20px 50px 20px #E1B4E7; ">

			<div class="panel-heading">Sign In</div>

				<div class="panel-body" style="background:url({{ base_url() }}/wallpaper-blur.jpg); background-size:100%;">
				
				<form action="{{ path_for('auth.signin') }}" method="post" autocomplete="off">
					<div class="form-group {{ errors.email ? ' has-error' : '' }}">
						<lable for="email">Email</lable>
						<input type="email" id="email" name="email" placeholder="email@email.com" class="form-control" value="{{ old.email }}">
						{% if errors.email %}
							<span class="help-block">{{ errors.email | first }}</span>
						{% endif %}
					</div>
					<div class="form-group{{ errors.password ? ' has-error' : '' }}">
						<lable for="password">Password</lable>
						<input type="password" id="password" name="password" class="form-control" value="{{ old.password }}">
						{% if errors.password %}
							<span class="help-block">{{ errors.password | first }}</span>
						{% endif %}
					</div>
						<input type="checkbox" id="seeme">  Show Password<br>
				<button type="submit" class="btn btn-default">Sign In</button>

				{{ csrf.field | raw }}
				</form>
				</div>

			</div>
<script>
$(document).ready(function(){
	$("#seeme").change(function(){
		var bool = $("#seeme").val();
		if(bool === "on"){
			$("#password").attr("type", "text");
		} else  {
			$("#password").attr("type", "password");
		}

	});
});
</script>
		</div>
	</div>
</div>


{% endblock %}