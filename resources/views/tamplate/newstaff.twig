{% extends 'tamplate/app.twig' %}

{% block content %}
<div class="page-header">
<h3><i class="fa fa-user"></i>Our Staff </h3>
</div>
  <button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal" onclick="getImages()" style="margin-bottom:10px;">Add Media</button>
  <script>
  $( function() {
    $( "#accordion" ).accordion();
  } );
  </script>
<div class="row">

  <div class="col-md-6">

    <div class="panel panel-default">
{% if update == 1 %}
      <div class="panel-heading"><h4>Update Staff User</h4></div>
{% else %}
      <div class="panel-heading"><h4>Add Staff User</h4></div>
{% endif %}

        <div class="panel-body">
        
        <form action="{{ path_for('dash.addstaff') }}" method="post">
          <div class="form-group {{ errors.name ? ' has-error' : '' }}">
            <lable for="name">Name</lable>
            <input type="text" id="name" name="name" placeholder="Enter Name Here" class="form-control" value="{{ old.name }}">
            {% if errors.name %}
              <span class="help-block">{{ errors.name | first }}</span>
            {% endif %}
          </div>
          <div class="form-group {{ errors.email ? ' has-error' : '' }}">
            <lable for="email">Email</lable>
            <input type="email" id="email" name="email" placeholder="email@email.com" class="form-control" value="{{ old.email }}">
            {% if errors.email %}
              <span class="help-block">{{ errors.email | first }}</span>
            {% endif %}
          </div>
          <div class="form-group{{ errors.username ? ' has-error' : '' }}">
            <lable for="username">Username</lable>
            <input type="text" id="username" name="username" placeholder="Username here" class="form-control" value="{{ old.username }}">
            {% if errors.username %}
              <span class="help-block">{{ errors.username | first }}</span>
            {% endif %}
          </div>
          <div class="form-group{{ errors.password ? ' has-error' : '' }}">
            <lable for="password">Password</lable>
            <input type="password" id="password" name="password" placeholder="Create Password" class="form-control" >
            {% if errors.password %}
              <span class="help-block">{{ errors.password | first }}</span>
            {% endif %}
          </div>
          <div class="form-group{{ errors.repassword ? ' has-error' : '' }}">
            <lable for="repassword">Re-Password</lable>
            <input type="password" id="repassword" name="repassword" placeholder="Re Enter Password"  class="form-control" >
            {% if errors.repassword %}
              <span class="help-block">{{ errors.repassword | first }}</span>
            {% endif %}
          </div>
          <div class="form-group{{ errors.slug ? ' has-error' : '' }}">
            <lable for="slug">Slug</lable>
            <input type="text" id="slug" name="slug" placeholder="Enter users slug"  class="form-control"  value="{{ old.slug }}">
            {% if errors.slug %}
              <span class="help-block">{{ errors.slug | first }}</span>
            {% endif %}
          </div>
          <div class="form-group{{ errors.fimg ? ' has-error' : '' }}">
            <lable for="fimg">Featured Image</lable>
            <input type="text" id="fimg" name="fimg" placeholder="Enter link for image"  class="form-control"  value="{{ old.fimg }}" >
            {% if errors.fimg %}
              <span class="help-block">{{ errors.fimg | first }}</span>
            {% endif %}
          </div>
          <div class="form-group{{ errors.cast ? ' has-error' : '' }}">
            <lable for="cast">Cast</lable>
            <select class="form-control" name="cast">
              <option value="">Select Cast</option>
              <option value="1">Administrator</option>
              <option value="2">Author</option>
            </select>
            {% if errors.cast %}
              <span class="help-block">{{ errors.cast | first }}</span>
            {% endif %}
          </div>
          <div class="form-group{{ errors.description ? ' has-error' : '' }}">
            <lable for="description">Description</lable>
            <textarea id="description" name="description" placeholder="Enter Short description"  class="form-control" style="resize:none;"> {{ old.description }} </textarea>
            {% if errors.description %}
              <span class="help-block">{{ errors.description | first }}</span>
            {% endif %}
          </div>
        <button type="submit" class="btn btn-default">Add User</button>
        {{ csrf.field | raw }}
        </form>
        </div>

      </div>

    </div>
  </div>
</div>

{% endblock %}